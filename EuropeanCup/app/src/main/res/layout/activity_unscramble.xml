<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:id="@+id/alllinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_bag"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp">
                    <cn.com.imageselect.widget.RoundImageView
                        android:id="@+id/unscramble_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@color/colorAccent" />
                    <ImageView
                        android:id="@+id/unscramble_v"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/people_v"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/unscramble_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C罗的大人"
                        android:textColor="@color/tblack"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/unscramble_followNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="2.4W人关注"
                        android:textColor="@color/nblack"
                        android:textSize="11sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/unscramble_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/people_follow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#EDEDED" />

            <TextView
                android:id="@+id/unscramble_pname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="预选赛D组第10轮"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/unscramble_ptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="1分钟前"
                android:textColor="@color/nblack"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <cn.com.imageselect.widget.BorderRoundImageView
                        android:id="@+id/unscramble_t1Img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        app:border_outcolor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/unscramble_t1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="北马其顿"
                        android:textColor="@color/tblack"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/unscramble_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="1:0"
                        android:visibility="gone"
                        android:textColor="@color/tblack"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/unscramble_gname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预选赛D组第10轮"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/unscramble_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11-20 03:45"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/nblack"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/unscramble_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/unscramble_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <cn.com.imageselect.widget.BorderRoundImageView
                        android:id="@+id/unscramble_t2Img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        app:border_outcolor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/unscramble_t2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="北马其顿"
                        android:textColor="@color/tblack"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="胜负预测"
                android:textColor="@color/tblack"
                android:textSize="15dp" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_zd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@color/transparent"
                    android:background="@drawable/uns_select"
                    android:text="主队"
                    android:padding="10dp"
                    android:gravity="center"
                    android:checked="true"
                    android:enabled="false"
                    android:layout_marginRight="5dp"
                    android:textColor="@drawable/uns_text"/>
                <RadioButton
                    android:id="@+id/radio_ps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@color/transparent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/uns_select"
                    android:text="平手"
                    android:enabled="false"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@drawable/uns_text"/>
                <RadioButton
                    android:id="@+id/radio_kd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@color/transparent"
                    android:background="@drawable/uns_select"
                    android:text="客队"
                    android:padding="10dp"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_marginLeft="5dp"
                    android:textColor="@drawable/uns_text"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="解读详情"
                android:textColor="@color/tblack"
                android:textSize="15dp" />

            <WebView
                android:id="@+id/unscramble_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:scrollbars="none"
                tools:ignore="WebViewLayout" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
