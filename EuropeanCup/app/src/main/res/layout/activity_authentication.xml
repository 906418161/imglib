<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <EditText
        android:id="@+id/authentication_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_bag"
        android:hint="请输入姓名"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:textColor="@color/tblack"
        android:textColorHint="#9A9A9A"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/authentication_idcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_bag"
        android:hint="请输入身份证号码"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:textColor="@color/tblack"
        android:textColorHint="#9A9A9A"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/authentication_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_bag"
        android:gravity="start"
        android:hint="认证描述"
        android:minHeight="100dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:textColor="@color/tblack"
        android:textColorHint="#9A9A9A"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="审核通过后即获得专家认证"
        android:textColor="#9a9a9a"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/authentication_sub"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/renzheng_red"
        android:gravity="center"
        android:text="认证"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>
