<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <cn.com.imageselect.widget.RoundImageView
            android:id="@+id/newscomment_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@color/colorAccent" />

        <TextView
            android:id="@+id/newscomment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="新闻小白"
            android:textColor="@color/tblack"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/newscomment_like_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/newscomment_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/newscommet_like" />

            <TextView
                android:id="@+id/newscomment_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1244"
                android:textColor="@color/nblack"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/newscomment_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="特朗普说约翰逊是接替特雷莎·梅的上佳人选，并称约翰逊
将会成为“一位伟大的首相”，开始在拉靠人际关系"
        android:textColor="@color/tblack"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/newscomment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="2019-06-06"
        android:textColor="@color/nblack"
        android:textSize="11sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#EAEAEA" />
</LinearLayout>
