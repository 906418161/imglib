<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.zhouwei.mzbanner.MZBannerView
                    android:id="@+id/home_banner"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:canLoop="true"
                    app:indicatorAlign="center"
                    app:indicatorPaddingRight="10dp"
                    app:middle_page_cover="false"
                    app:open_mz_mode="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edit_bag"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/home_rank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/home_daren"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="欧杯历史"
                        android:textColor="#313131"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/home_news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/home_zjjd"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="专家解读"
                        android:textColor="#313131"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/home_matchlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/home_matchlist"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="赛事"
                        android:textColor="#313131"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/home_match"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/home_qiuxin"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="球星动态"
                        android:textColor="#313131"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专家认证"
                        android:textColor="#343434"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/no_daren"
                        android:drawablePadding="5dp"
                        android:text="未认证"
                        android:textColor="@color/nblack"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/home_renzhen"
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/renzheng_red"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:text="立即认证"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="认证通过即可获得专家标识，发表权威解读，赶紧去认证吧。"
                    android:textColor="@color/nblack"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FD6958" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/home_zj_ic"
                    android:drawablePadding="5dp"
                    android:text="专家解读"
                    android:textColor="#FD6958"
                    android:textSize="15dp" />

                <com.zhouwei.mzbanner.MZBannerView
                    android:id="@+id/home_zjbanner"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:canLoop="true"
                    app:indicatorAlign="center"
                    app:indicatorPaddingRight="10dp"
                    app:middle_page_cover="false"
                    app:open_mz_mode="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F8AD34" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/home_bj_ic"
                    android:drawablePadding="5dp"
                    android:text="热门解读"
                    android:textColor="#F8AD34"
                    android:textSize="15dp" />
                <cn.com.imageselect.widget.ListViewForScrollView
                    android:id="@+id/home_hotbj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@color/transparent"
                    android:divider="#EBEBEB"
                    android:dividerHeight="1dp"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#5189E3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/home_hot_ic"
                    android:drawablePadding="5dp"
                    android:text="热门主题"
                    android:textColor="#5189E3"
                    android:textSize="15dp" />

                <cn.com.imageselect.widget.ThisGridView
                    android:id="@+id/home_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@color/transparent"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/home_img"
                    android:drawablePadding="5dp"
                    android:text="历届欧洲杯"
                    android:textColor="@color/tblack"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/home_cupmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多>>"
                    android:textColor="@color/nblack"
                    android:textSize="14sp" />
            </LinearLayout>

            <cn.com.imageselect.widget.ThisGridView
                android:id="@+id/home_cupgridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:horizontalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="10dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/home_img"
                    android:drawablePadding="5dp"
                    android:text="热门比赛"
                    android:textColor="#5189E3"
                    android:textSize="15dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_hot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/home_img"
                android:drawablePadding="5dp"
                android:text="专家解读"
                android:textColor="@color/tblack"
                android:textSize="15dp"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f0f0f0" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
