<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <!--android:background="@android:color/transparent"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#149de9"
                android:text="版本更新"/>

            <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.5sp"
            android:textColor="#f04011"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="set your add version"
                android:textStyle="bold"/>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="19dp"

            android:progressDrawable="@drawable/update_progress"/>

        <TextView
            android:id="@+id/message"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:text="add your message" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="67dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/ok"
                android:layout_width="136dp"
                android:layout_height="39dp"
                android:background="@drawable/update_sure_button"
                android:text="立即更新"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/no"
                android:layout_width="136dp"
                android:layout_height="39dp"
                android:background="@drawable/update_no_button"
                android:text="以后再说"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
